# Rez-Proxy Development Configuration
# Copy this file to .env or set these environment variables

# Server Configuration
REZ_PROXY_API_HOST=localhost
REZ_PROXY_API_PORT=8000
REZ_PROXY_API_RELOAD=true
REZ_PROXY_API_LOG_LEVEL=debug
REZ_PROXY_API_WORKERS=1

# CORS Configuration (for development)
REZ_PROXY_API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "*"]

# Rez Configuration
REZ_PROXY_API_REZ_CONFIG_FILE=/path/to/your/rez/config.py
REZ_PROXY_API_REZ_PACKAGES_PATH=/path/to/your/packages
REZ_PROXY_API_REZ_LOCAL_PACKAGES_PATH=/path/to/local/packages
REZ_PROXY_API_REZ_RELEASE_PACKAGES_PATH=/path/to/release/packages
REZ_PROXY_API_REZ_TMPDIR=/tmp/rez
REZ_PROXY_API_REZ_CACHE_PACKAGES_PATH=/var/cache/rez
REZ_PROXY_API_REZ_DISABLE_HOME_CONFIG=false
REZ_PROXY_API_REZ_QUIET=false
REZ_PROXY_API_REZ_DEBUG=true

# Cache Configuration
REZ_PROXY_API_ENABLE_CACHE=true
REZ_PROXY_API_CACHE_TTL=300

# Security (for development only)
REZ_PROXY_API_API_KEY=your-dev-api-key

# Debug Settings
PYTHONPATH=src
PYTHONDONTWRITEBYTECODE=1
